{
  "repository": "@superbet/dark",
  "head": "specify",
  "base": "main",
  "rules": [
    {
      "name": "Design Tokens",
      "path": "./output/dark/tokens",
      "filter": {
        "types": [
          "color",
          "font",
          "vector"
        ]
      },
      "parsers": [
        {
          "name": "kebabcasify"
        },
        {
          "name": "to-style-dictionary",
          "options": {
            "formatTokens": {
              "fontFormat": [
                "woff",
                "woff2"
              ],
              "colorFormat": {
                "format": "hex8"
              }
            },
            "assetsBaseDirectory": {
              "fonts": "../../assets/fonts",
              "icons": "../../assets/vectors"
            }
          }
        }
      ]
    },
    {
      "name": "Assets / Vectors",
      "path": "./output/dark/assets/vectors",
      "filter": {
        "types": [
          "vector"
        ]
      },
      "parsers": [
        {
          "name": "filter",
          "options": {
            "key": "value.format",
            "regex": {
              "pattern": "svg"
            }
          }
        },
        {
          "name": "kebabcasify"
        },
        {
          "name": "svgo",
          "options": {
            "svgo": {
              "js2svg": {
                "pretty": true
              }
            }
          }
        }
      ]
    },
    {
      "name": "Assets / Fonts",
      "path": "./output/dark/assets/fonts",
      "filter": {
        "types": [
          "font"
        ]
      },
      "parsers": [
        {
          "name": "convert-font",
          "options": {
            "formats": [
              "woff",
              "woff2"
            ]
          }
        }
      ]
    }
  ]
}
