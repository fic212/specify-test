{
  "repository": "@superbet/light",
  "head": "specify",
  "base": "main",
  "rules": [
    {
      "name": "Light colors",
      "path": "./output/light",
      "filter": {
        "types": [
          "color"
        ]
      },
      "parsers": [
        {
          "name": "kebabcasify"
        },
        {
          "name": "to-style-dictionary",
          "options": {
            "formatTokens": {
              "colorFormat": {
                "format": "hex8"
              }
            }
          }
        }
      ]
    }
  ]
}
